{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/app/*": [
        "src/app/*"
      ],
      "@/shared/*": [
        "src/shared/*"
      ],
      "@/entities/*": [
        "src/entities/*"
      ],
      "@/features/*": [
        "src/features/*"
      ],
      "@/widgets/*": [
        "src/widgets/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}